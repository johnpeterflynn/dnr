{
    "name": "DNR",
    "n_gpu": 1,

    "arch": {
        "type": "RenderNet",
        "args": {
            "texture_size": 1024,
            "texture_depth": 16,
            "mipmap_levels": 4
        }
    },
    "data_loader": {
        "type": "UVDataLoader",
        "args":{
            "data_dir": "data/",
            "batch_size": 32,
            "skip": 6,
            "shuffle": true,
            "num_workers": 5
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        },
        "laplacian_weight_decay": 0.0001
    },
    "loss": "photometric_rep_loss_laplacian_l2",
    "metrics": [
	    "mse_rgb32"
    ],
    "trainer": {
        "epochs": 300,

        "save_dir": "saved/",
        "save_period": 20,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 100,

        "tensorboard": true
    }
}
