{
    "name": "Deferred_Neural_Rendering",
    "n_gpu": 1,

    "arch": {
        "type": "DeferredNeuralRenderer",
        "args": {
            "input_size": 2
        }
    },
    "data_loader": {
        "type": "UVDataLoader",
        "args":{
            "data_dir": "data/",
            "batch_size": 1,
            "skip": 6,
            "shuffle": true,
            "num_workers": 1
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "photometric_reproduction_loss",
    "metrics": [
        "accuracy", "top_k_acc"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 500,
            "gamma": 1.0
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 100,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true
    }
}
