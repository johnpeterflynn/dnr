{
    "name": "DNR",
    "n_gpu": 1,

    "arch": {
        "type": "RenderNet",
        "args": {
            "texture_size": 3000,
            "texture_depth": 3,
            "mipmap_levels": 4
        }
    },
    "data_loader": {
        "type": "UVDataLoader",
        "args":{
            "data_dir": "data/scene0000_00",
            "uv_folder_name": "uv/uv_volumetric",
            "color_folder_name": "color",
            "data_select_file": "filters/keypoint_blur_1.2.txt",
            "batch_size": 5,
            "skip": 1,
            "slice_start": 0,
            "slice_end": 5577,
            "slice_step": 1,
	    "num_in_train_step": 18,
	    "num_in_val_step": 6,
            "net_input_height": 400,
            "net_input_width": 400,
            "min_scale_size": 400,
            "max_scale_size": 968,
            "num_ignore_border_pixels_lr": 11,
            "num_ignore_border_pixels_tb": 8,
            "shuffle": true,
            "compressed_input": true,
            "num_workers": 8
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.01,
            "weight_decay": 2.5e-6,
            "amsgrad": true
        },
        "laplacian_weight_decay": 0
    },
    "loss": "photometric_reproduction_loss",
    "metrics": [
	    "mse_rgb32",
	    "psnr"
    ],
    "trainer": {
        "epochs": 500,

        "save_dir": "saved/",
        "save_period": 100,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 500,

        "tensorboard": true
    }
}
