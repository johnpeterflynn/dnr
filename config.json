{
    "name": "DNR",
    "n_gpu": 1,

    "arch": {
        "type": "RenderNet",
        "args": {
            "texture_size": 3000,
            "texture_depth": 16,
            "mipmap_levels": 4
        }
    },
    "data_loader": {
        "type": "UVDataLoader",
        "args":{
            "data_dir": "data/scene0000_00",
            "uv_folder_name": "uv/scene0000_00_vh_clean_smartuv_75_0_0_no_aspect_enclosed",
            "color_folder_name": "color",
            "data_select_file": "filters/keypoint_blur_1.2.txt",
            "batch_size": 5,
            "skip": 6,
            "slice_start": 0,
            "slice_end":5578,
            "net_input_height": 256,
            "net_input_width": 256,
            "min_scale_size": 512,
            "max_scale_size": 512,
            "shuffle": true,
            "compressed_input": true,
            "num_workers": 8
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        },
        "laplacian_weight_decay": 0
    },
    "loss": "photometric_reproduction_loss",
    "metrics": [
	    "mse_rgb32",
	    "psnr"
    ],
    "trainer": {
        "epochs": 500,

        "save_dir": "saved/",
        "save_period": 50,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 500,

        "tensorboard": true
    }
}
